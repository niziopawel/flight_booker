<%= form_with(url: flights_path, method: :get, class: 'form') do |f| %>
    <%= f.select :departure_airport_id, 
                 options_for_select(@airport_options, params[:departure_airport_id]),
                 { prompt: "From"},
                 { required: true } %>

    <%= f.select :arrival_airport_id, 
                 options_for_select(@airport_options, params[:arrival_airport_id]), 
                 { prompt: "To"},
                 { required: true } %>
    
    <%= f.date_field :date, min: Date.today, value: params[:date] || @default_date  %>
  <%= f.submit "Search Flights" %>
<% end %>